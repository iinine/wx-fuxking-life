/**index.wxss**/
.head, .main, .foot{
  width: 100%;
  text-align: center;
}
.head{
  background: #1d4d4f;
  height: 150rpx;
  position: relative;
}
.head text{
  position: absolute;
  left: 12rpx;
  bottom: 12rpx;
  font-size: 26rpx;
  color: #ffffff;
  opacity: .6;
}

.main{
  flex: 1;
  position: relative;
}
.main .text{
  font-size: 60rpx;
  color: #357376;
  position: absolute;
  width: 100%;
  left: 50%;
  top: 30%;
  transform: translate(-50%, -50%);
  padding: 0 30rpx;
}
.main .text::after{
  content: '';
  display: block;
  width: 20vw;
  height: 1vw;
  background-color: #6ba8a9;
  position: absolute;
  bottom: -4vw;
  left: 50%;
  transform: translateX(-50%);
}

.option{
  margin-bottom: 40vw;
  position: relative;
}
.option button{
  width: 90vw;
  background-color: transparent;
  border: 1px solid #1d4d4f;
  font-size: 16px;
  color: #1d4d4f;
  border-radius: 50px;
  font-weight: 300;
  padding: 10px 24px;
}
.option text{
  position: absolute;
  top: 200rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 26rpx;
  color: #6ba8a9;
}

.foot{
  height: 80rpx;
}
.foot text{
  color: #6ba8a9;
  font-size: 12px;
  opacity: .4;
  font-weight: 300;
}
